server_send=Queue(0)
server_receive=Queue(0)
client_send=Queue(0)
client_receive=Queue(0)

server_socket=My_TCP(ip="127.0.0.1",port=5005,con_type="server")
client_socket=My_TCP(ip="127.0.0.1",port=5005,con_type="client")

server_sender=Sender_Thread(server_send,server_socket)
server_receiver=Receiver_Thread(server_receive,server_socket)

client_sender=Sender_Thread(client_send,client_socket)
client_receiver=Receiver_Thread(client_receive,client_socket)

server_send_processor= Send_Processor(server_send)
server_receive_processor=Received_Processor(server_receive,con_type="server")

client_send_processor=Send_Processor(client_send)
client_receive_processor=Received_Processor(client_receive,con_type="client")

server_sender.start()
server_receiver.start()

client_sender.start()
client_receiver.start()

server_send_processor.start()
server_receive_processor.start()

client_send_processor.start()
client_receive_processor.start()



class Send_Processor(Thread):
    
    def __init__(self,send_Q=Queue(0)):
        self.send_Q=send_Q
    
    
    def run(self,):
        pass
        self.send_process()
        
        
    def send_process(self):    
        counter=1
        while(True):
            self.send_Q.put(counter)
            counter=counter+1
            sleep(1000)
            
    
class Received_Processor(Thread):
    
    def __init__(self, received_Q=Queue(0),con_type="client"):
        self.received_Q=received_Q
        self.con_type=con_type
        
    
    
    def run(self):
        pass
        self.receive_process()
        
        
    def receive_process(self):    
        while(True):
            if(~self.received_Q.isEmpty()):
                data=self.received_Q.get()
                print("from{} data{}".format(self.con_type,data))
        






